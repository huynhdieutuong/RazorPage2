@* 3.3 Create View for MessagePage *@

@model MessageComponent.MessagePage.Message

@{
  Layout = "_Layout";
  ViewData["Title"] = @Model.Title;
}

<div class="card m-4">
  <div class="card-header bg-danger text-light">
    <h4>@Model.Title</h4>
  </div>
  <div class="card-body">
    @Html.Raw(Model.HtmlContent)
  </div>
  <div class="card-footer">
    Redirect to - <a href="@Model.UrlRedirect">@Model.UrlRedirect</a>
  </div>
</div>