@page "/privacy.html"
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<hr>

<form class="bg-light p-2 m-2" method="post" asp-page="Privacy">
  <div class="form-group">
    @* <label for="userId">UserId</label> *@
    <label asp-for="@Model.UserId"></label> @*"Your Id"*@
    @* <input type="text" class="form-control" id="userId" name="UserId"> *@
    <input class="form-control" asp-for="@Model.UserId">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name="Email">
  </div>
  <div class="form-group">
    <label for="userName">UserName</label>
    <input type="text" class="form-control" id="userName" name="UserName">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="alert alert-danger">
    <p>User Info</p>
    <ul>
        <li>UserId: @Model.UserId</li>
        <li>Email: @Model.Email</li>
        <li>UserName: @Model.UserName</li>
    </ul>
</div>

@section FooterContent{
    <p>This is footer of Privacy</p>
}
